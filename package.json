{
  "name": "i18next-cli-language-detector",
  "description": "i18next language detector module for CLI",
  "version": "1.1.3",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "yarn run type-check && rollup -c rollup.config.js",
    "type-check": "tsc --noEmit",
    "test": "yarn run test:jest && yarn run test:e2e",
    "test:jest": "jest --coverage",
    "test:e2e": "bash ./e2e/test.sh",
    "lint": "eslint -c .eslintrc.json ./src/**/*.ts"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neet/i18next-cli-language-detector.git"
  },
  "keywords": [
    "i18next",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/neet/i18next-cli-language-detector/issues"
  },
  "homepage": "https://github.com/neet/i18next-cli-language-detector#readme",
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.30",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "i18next": "^21.6.14",
    "jest": "^27.5.0",
    "prettier": "^2.6.2",
    "rollup": "^2.71.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^4.1.0",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "i18next": "^21.0.0"
  }
}
